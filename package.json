{
  "name": "whisper-transcribe",
  "version": "1.0.0",
  "description": "A lightweight web application that converts spoken audio to text using Azure's Speech Services. Record directly from your browser and get transcriptions in real-time.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "NODE_NO_WARNINGS=1 NODE_OPTIONS=--experimental-vm-modules jest",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:ci": "NODE_OPTIONS=--experimental-vm-modules jest --ci --coverage",
    "test:coverage:summary": "NODE_OPTIONS=--experimental-vm-modules jest --coverage --coverageReporters=text-summary",
    "test:coverage:html": "NODE_OPTIONS=--experimental-vm-modules jest --coverage --coverageReporters=html",
    "docs": "jsdoc -c jsdoc.json",
    "docs:clean": "rm -rf docs && npm run docs",
    "prepare": "husky",
    "lint": "eslint \"js/**/*.js\"",
    "lint:fix": "eslint --fix \"js/**/*.js\"",
    "deps:analyze": "knip",
    "deps:analyze:json": "knip --reporter json",
    "deps:check": "knip",
    "deps:check:prod": "knip --production --dependencies",
    "deps:check:exports": "knip --exports",
    "deps:check:files": "knip --files",
    "deps:report": "knip --reporter markdown",
    "deps:fix": "knip --fix",
    "deps:fix:safe": "knip --fix --fix-type dependencies --no-exit-code",
    "ci:deps": "knip --max-issues 0",
    "ci:deps:report": "knip --reporter json",
    "size": "size-limit",
    "size:ci": "size-limit --why",
    "test:vitest": "vitest",
    "test:vitest:ui": "vitest --ui",
    "test:vitest:coverage": "vitest --coverage",
    "test:vitest:pilot": "vitest tests/recording-state-machine.vitest.js",
    "test:vitest:pilot:run": "vitest run tests/recording-state-machine.vitest.js",
    "test:jest:pilot": "NODE_NO_WARNINGS=1 NODE_OPTIONS=--experimental-vm-modules jest tests/recording-state-machine.test.js",
    "test:compare": "npm run test:jest:pilot && npm run test:vitest:pilot:run",
    "test:vitest:phase1": "vitest run tests/error-handler.vitest.js tests/status-reset.vitest.js tests/audio-handler-stop.vitest.js tests/jsdoc-generation.vitest.js",
    "test:jest:phase1": "NODE_NO_WARNINGS=1 NODE_OPTIONS=--experimental-vm-modules jest tests/error-handler.test.js tests/status-reset.test.js tests/audio-handler-stop.test.js tests/jsdoc-generation.test.js",
    "test:phase1:parallel": "npm run test:jest:phase1 && npm run test:vitest:phase1"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@jest/globals": "^30.0.4",
    "@size-limit/file": "^11.2.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.30.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "glob": "^11.0.3",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "jsdoc": "^4.0.4",
    "knip": "^5.61.3",
    "size-limit": "^11.2.0",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "glob": "^11.0.3"
  },
  "size-limit": [
    {
      "path": "dist/*.js",
      "limit": "100 kB"
    }
  ]
}
